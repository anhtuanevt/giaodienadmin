<section class="main-news-slider">
    <ul class="main-slider">
        <% categories.forEach(category => { %>
        <li>
            <div class="news-post image-post2">
                <div class="post-gallery">
                    <% 
                    const cloudinaryBaseUrl = category.photo.split("/image/upload/")[0];
                    const thumbnailPath = category.photo.split("/image/upload/")[1];
                    const transformedThumbnail = `${cloudinaryBaseUrl}/w_1920,h_840,c_fill/${thumbnailPath}`;
                    %>
                    <img src="<%= transformedThumbnail %>" alt="" >
                    <div class="hover-box">
                        <div class="inner-hover">
                            <a class="category-post" href="/<%= category.slug %>"><%= category.name %></a>
                            <h2><a href="/<%= category.slug %>"><%= category.description %></a>
                            </h2>
                            <!-- <ul class="post-tags">
                                <li><i class="fa fa-clock-o"></i>27 may 2013</li>
                                <li><i class="fa fa-user"></i>by <a href="#">John Doe</a></li>
                                <li><a href="#"><i class="fa fa-comments-o"></i><span>0</span></a></li>
                                <li><i class="fa fa-eye"></i>872</li>
                            </ul> -->
                        </div>
                    </div>
                </div>
            </div>
        </li>
        <% }) %>

    </ul>
    </ul>
    <div class="custom-slider-arrows">
        <div class="container">
            <div id="slider-prev"></div>
            <div id="slider-next"></div>
        </div>
    </div>
</section>