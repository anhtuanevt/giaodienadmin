<section class="features-today">
    <div class="container">

        <div class="title-section white">
            <h1><span>Tin tức phổ biến</span></h1>
        </div>
        
        <div class="features-today-box owl-wrapper">
            <div class="owl-carousel" data-num="4">
                <% homeArticles.slice(0, 10).forEach(article => { %>
                    <div class="item news-post standard-post">
                        <div class="post-gallery">
                            <% if (article.thumbnail) { %>
                                <% 
                                    const transformedThumbnail = helper.transformPhoto(article.thumbnail, 270, 150);
                                %>
                                <img src="<%= transformedThumbnail %>" alt="">

                            <% } else { %>
                                <img src="/frontend/upload/news-posts/st1.jpg" alt="">
                            <% } %>
                        </div>
                        <div class="post-content">
                            <h2><a href="/<%=article.slug%>"><%=article.name%> </a></h2>
                            <ul class="post-tags">
                                <% 
                                const formattedDate = helper.formatDate(article.createdAt);
                                %>
                                <li><i class="fa fa-clock-o"></i><%=formattedDate%></li>
                            </ul>
                        </div>
                    </div>
                    <% }) %>
               
            </div>
        </div>

    </div>
</section>