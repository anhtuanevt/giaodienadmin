<% 
const collection="contact" ; 
const linkPrefix='admin/contact' ; 
const linkThumb='' ; 
 %>
    <div class="card card-info card-outline" >
        <form  data-id="<%=contact._id %>" method="POST" class="mb-0" id="contact-form" onsubmit="submitContact(event, '<%=contact._id %>')">
            <div class="card-body">
                <h1>
                    Add - Form 
                </h1>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="name-input-form" name="name" class="form-control form-control-sm"
                            value="<%=contact.name%>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label text-sm-right required">Email</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="email-input-form" name="email" class="form-control form-control-sm"
                            value="<%=contact.email%>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
                    <div class="col-xs-12 col-sm-8">
                        <select id="status-select-form" name="status" class="custom-select custom-select-sm">
                            <option value="active" <% if (contact.status  === 'active') { %>selected<% } %>>Active</option>
                            <option value="inactive" <% if (contact.status === 'inactive') { %>selected<% } %>>Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="message" class="col-sm-2 col-form-label text-sm-right required">Message</label>
                    <div class="col-xs-12 col-sm-8">
                        <textarea name="message" id="description" class="form-control"><%=contact.message%></textarea>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <div class="col-12 col-sm-8 offset-sm-2">
                    <button type="submit" class="btn btn-sm btn-success mr-1">
                        Submit</button>
                    <a href="/admin/<%=collection%>" class="btn btn-sm btn-danger mr-1">
                        Cancel</a>
                </div>
            </div>
        </form>

    </div>