<% linkPrefix = 'admin/contact' %>
<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0">Danh mục liên hệ</h1>
    </div>
</div>
<%- locals.flash %>
<div class="card card-info card-outline">
	<div class="card-header">
		<h6 class="card-title">Search & Filter</h6>
		<div class="notify-message">
		</div>
		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
		</div>
	</div>
	<div class="card-body">
		<div class="row justify-content-between">
			<div class="mb-1">
				<div class="btn-search">
					<a href="<%=linkPrefix%>">
						<button type="button" class="btn btn-info ${items.class}">
							All (<span><%=contacts.length%></span>)
						</button>
					</a>
					<a href="<%=linkPrefix%>?status=active">
						<button type="button" class="btn btn-info ${items.class}">
							Active (<span><%=contacts.filter(contact => contact.status === 'active').length%></span>)
						</button>
					</a>
					<a href="<%=linkPrefix%>?status=inactive">
						<button type="button" class="btn btn-info ${items.class}">
							Inactive (<span><%=contacts.filter(contact => contact.status === 'inactive').length%></span>)
						</button>
					</a>
				</div>
				
			</div>
			
			<div class="mb-1">
				<form action="#" method="get">
					<div class="input-group">
						<input type="text" class="form-control form-control-sm" name="keyword" value="" placeholder="Search for..." style="min-width: 300px">
						<div class="input-group-append">
							<a type="button" class="btn btn-sm btn-danger"  href="#">Clear</a>
							<button type="submit" class="btn btn-sm btn-info" id="btn-search">Search</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


<!-- Content -->
<form action="/admin/contact/multipleAction" method="post" name="multipleForm" id = "multiForm">
<div class="card card-info card-outline">
	<div class="card-header">
		<h4 class="card-title">List</h4>
		<div class="card-tools">
			<div class="btn-group">
				<button type="button" class="btn btn-info" data-toggle="dropdown" aria-expanded="false">Change Status</button>
				</>
				<div class="dropdown-menu" role="menu" >
					<button type="button" onClick="" class="dropdown-item" data-toggle="modal" data-target="#modal-success">
						Change to Active
						</button>
					<div class="dropdown-divider"></div>
						<button type="button" onClick="" class="dropdown-item" data-toggle="modal" data-target="#modal-danger">
							Change to Inactive
						</button>
					</div>
				</div>
			<a href="<%=linkPrefix%>/form" class="btn btn-warning" style="background-color: #F0AD4E; color: white; font-weight: 500;">Add New</a>
			<button type="button" class="btn btn-danger" onClick="" data-toggle="modal" data-target="#modal-danger">
				<i class="fas fa-trash-alt"></i>Delete Multi
			</button>
		</div>
		<input type="hidden" name="action" id="inputHiddenAll" value="" >
	</div>
	<div class="card-body">
		<!-- Control -->
		<!-- <form action="" method="post" class="table-responsive" id="zt-form"> -->

			<!-- List Content -->
		
			<table class="table table-bordered table-hover text-nowrap btn-table mb-0">
				<thead>
					<tr>
						<th class="text-center">
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input checkAll" type="checkbox" id="check-all">
								<label for="check-all" class="custom-control-label"></label>
							</div>
						</th>
						<th class="text-center">#</a></th>
						<th class="text-center">Name</a></th>
						<th class="text-center">Status</a></th>
						<th class="text-center">Email</a></th>
						<th class="text-center">Description</a></th>
						<th class="text-center">Action</th>
					</tr>
				</thead>
				<tbody>
					<% contacts.forEach(function(contact, index) { %>
                    <tr>
						<td class="text-center">
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input checkbox" type="checkbox" name="cid" id="check<%=index+1%>" value="<%=index+1%>">
								<label for="check<%=index+1%>" class="custom-control-label"></label>
							</div>
						</td>
						<td class="text-center"><%=index+1%></td>
						<td class="text-center"><span><%=contact.name%></span></td>

						<td id = "status-<%=contact._id%>" class="text-center position-relative">
							<a href="" 
								class="rounded-circle btn btn-sm <%= contact.status === 'active' ? 'btn-success' : 'btn-danger' %>">
								<i class="fas <%= contact.status === 'active' ? 'fa-check' : 'fa-ban' %>"></i>
							</a>
						</td>
						<td class="text-center"><span><%=contact.email%></span></td>

						<td class="text-center"><span><%=contact.message%></span></td>

						<td class="text-center">
							<a href="<%=linkPrefix%>/form/<%=contact._id%>" class="rounded-circle btn btn-sm btn-info " title="Edit">
								<i class="fas fa-pencil-alt"></i>
							</a>
         
							<a href="javascript:void(0);" onclick="confirmDelete('<%= linkPrefix %>/delete/<%=contact._id %>')" class="rounded-circle btn btn-sm btn-danger">
								<i class="fas fa-trash-alt"></i>
							</a>
							<!-- <button type="button" class="rounded-circle btn btn-sm btn-danger">
								<i class="fas fa-trash-alt"></i>
							</button> -->
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
		<!-- </form> -->
		
	</div>
	<div class="card-footer clearfix">
		<ul class="pagination pagination-sm m-0 float-right">
		<li class="page-item"><a class="page-link" href="#">«</a></li>
		<li class="page-item"><a class="page-link" href="#">1</a></li>
		<li class="page-item"><a class="page-link" href="#">2</a></li>
		<li class="page-item"><a class="page-link" href="#">3</a></li>
		<li class="page-item"><a class="page-link" href="#">»</a></li>
		</ul>
		</div>
</div>
