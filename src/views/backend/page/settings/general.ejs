	
    <div class="tab-pane fade show active" id="general-settings" role="tabpanel" aria-labelledby="general-settings-tab">
        <div class="card card-primary mt-3">
            <div class="card-header" style="background-color: #17a2b8; color: #fff;">
                <h3 class="card-title">General Settings</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-social-tab" data-toggle="pill" href="#v-pills-social" role="tab" aria-controls="v-pills-social" aria-selected="true">Social Settings</a>
                            <a class="nav-link" id="v-pills-general-info-tab" data-toggle="pill" href="#v-pills-general-info" role="tab" aria-controls="v-pills-general-info" aria-selected="false">General Info</a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-social" role="tabpanel" aria-labelledby="v-pills-social-tab">
                                <!-- Social Settings Content -->
                                <form>
                                    <div class="form-group">
                                        <label for="facebook">Facebook</label>
                                        <input type="text" class="form-control" id="facebook" placeholder="Enter Facebook URL" data-value="<%= settings.social_settings.facebook_url %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="twitter">Twitter</label>
                                        <input type="text" class="form-control" id="twitter" placeholder="Enter Twitter URL" value="<%= settings.social_settings.twitter_url %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="instagram">Instagram</label>
                                        <input type="text" class="form-control" id="instagram" placeholder="Enter Instagram URL" value="<%= settings.social_settings.instagram_url %>">
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="v-pills-general-info" role="tabpanel" aria-labelledby="v-pills-general-info-tab">
                                <!-- General Info Settings Content -->
                                <form>
                                    <div class="form-group">
                                        <label for="logo">Logo</label>
                                        <input type="file" id="logo" name="logo" class="photo-input" value="<%= settings.general_info.logo %>">
                                        <div id="logo-preview">
                                            <% if (settings.general_info.logo) { %>
                                                <img src="<%= settings.general_info.logo %>" alt="logo" style="width: 100px; height: 100px; margin-right: 10px;">
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sitename">Site Name</label>
                                        <input type="text" class="form-control" id="sitename" value="<%= settings.general_info.sitename %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="about">About</label>
                                        <textarea class="form-control" id="about" rows="3" placeholder="Enter about information"><%= settings.general_info.about %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="contact">Contact</label>
                                        <input type="text" class="form-control" id="contact" placeholder="Enter contact information">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>