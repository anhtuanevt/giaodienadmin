<div class="tab-pane fade" id="email-settings" role="tabpanel" aria-labelledby="email-settings-tab">
    <div class="card card-primary mt-3">
        <div class="card-header" style="background-color: #17a2b8; color: #fff;">
            <h3 class="card-title">Email Settings </h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="senderName">Sender Name</label>
                <input type="text" class="form-control" id="senderName" placeholder="Enter sender name" value="<%= settings.email_settings.senderName %>">
            </div>
            <div class="form-group">
                <label for="senderEmail">Sender Email</label>
                <input type="email" class="form-control" id="senderEmail" placeholder="Enter sender email" value="<%= settings.email_settings.senderEmail %>">
            </div>
            <div class="form-group">
                <label for="templateSubject">Subject</label>
                <input type="text" class="form-control" id="templateSubject" placeholder="Enter email subject" value="<%= settings.email_settings.subject %>">
            </div>
            <div class="form-group">
                <label for="templateBody">Body</label>
                <textarea class="form-control" id="templateBody" rows="4" placeholder="Enter email body"><%= settings.email_settings.body %></textarea>
            </div>
        </div>
    </div>
</div>