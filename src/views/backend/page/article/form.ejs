<% const collection="category" ; const linkPrefix='/admin/article' ; const linkThumb='' ; %>
    <div class="card card-info card-outline">
        <form action='<%=linkPrefix%>/form/<%=article._id%>' data-id="<%=article._id%>" method="POST" class="mb-0" id="submit-data-form" enctype="multipart/form-data">
            <div class="card-body">
                <h1>
                   ARTICLE
                </h1>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="name-input-form" name="name" class="form-control form-control-sm"
                            value="<%=article.name%>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="title" class="col-sm-2 col-form-label text-sm-right required">Title</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="title-input-form" name="title" class="form-control form-control-sm"
                            value="<%=article.title%>">
                    </div>
                </div>

                <div class="form-group row" id="type_show">
                    <label for="type_show" class="col-sm-2 col-form-label text-sm-right required">Type Show</label>
                    <div class="col-sm-5">
                        <label for="is_home">Home</label>
                        <input type="checkbox" id="is_home" name="is_home" class="form-control form-control-sm" <%= article.is_home ? 'checked' : '' %>>
                    </div>
                    <div class="col-sm-5">
                        <label for="is_hot">Hot News</label>
                        <input type="checkbox" id="is_hot" name="is_hot" class="form-control form-control-sm" <%= article.is_hot ? 'checked' : '' %>>
                    </div>
                </div>
                
                <div class="form-group row">
                    <label for="author" class="col-sm-2 col-form-label text-sm-right required">Author</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="author-input-form" name="author" class="form-control form-control-sm"
                            value="<%=article.author%>">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
                    <div class="col-xs-12 col-sm-8">
                        <select id="status-select-form" name="status" class="custom-select custom-select-sm">
                            <option value="active">
                                Active</option>
                            <option value="inactive">
                                Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="ordering" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="ordering-input-form" name="ordering" class="form-control form-control-sm"
                            value="<%=article.ordering%>">
                    </div>
                </div>
    
                <div class="form-group row">
                    <label for="category" class="col-sm-2 col-form-label text-sm-right required">Category</label>
                    <div class="col-xs-12 col-sm-8">
                       <select name="category-dropdown" id="category-input-form" class="custom-select custom-select-sm">
                        <% categories.forEach(function(categories) { %>
                        <option value="<%=categories._id %>"><%=categories.name%></option>
                       <% }) %>
                       </select> 
                    </div>
                </div>
                <div class="form-group row">
                    <label for="thumbnail" class="col-sm-2 col-form-label text-sm-right required">Upload Thumbnail</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="file" id="thumbnail-input" name="thumbnail" multiple onchange="previewImages()">
                        <div id="image-preview">
                            <% if (article.thumbnail) { %>
                                <img src="<%= article.thumbnail %>" alt="Thumbnail" style="width: 100px; height: 100px; margin-right: 10px;">
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="tags" class="col-sm-2 col-form-label text-sm-right required">Tags</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="tags-input-form" name="tags" class="form-control form-control-sm"
                               value="<%=article.tags%>" data-tagify>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="description" class="col-sm-2 col-form-label text-sm-right required">Description</label>
                    <div class="col-xs-12 col-sm-8">
                        <textarea name="description" id="description" class="form-control"><%=article.description%></textarea>
                    </div>
                </div>
            </div> 
            <div class="card-footer">
                <div class="col-12 col-sm-8 offset-sm-2">
                    <button type="submit" class="btn btn-sm btn-success mr-1">
                        Submit</button>                                                 
                    <a href="/admin/article" class="btn btn-sm btn-danger mr-1">
                        Cancel</a>
                </div>
            </div>
        </form>

    </div>